{
    "manifest_version": 2,
    "name": "Advanced Find",
    "description": "A more advanced find on page tool",
    "version": "1.2",
    "offline_enabled": true,
    "author": "hughjdavey@github.com",

    "permissions": [
        "activeTab"
    ],

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/content.js"],
        "css": ["css/external.css"]
    }],

    "icons" : {
        "256": "resources/advanced-find.png"
    },

    "browser_action": {
        "default-title": "Advanced Find",
        "default_popup": "html/search-box.html",
        "default_icon": "resources/advanced-find.png"
    },

    "commands": {
        "previous": {
            "suggested_key": {
                "default": "Ctrl+Left"
            },
            "description": "Go to previous match"
        },
        "next": {
            "suggested_key": {
                "default": "Ctrl+Right"
            },
            "description": "Go to next match"
        },
        "clear": {
            "suggested_key": {
                "default": "Ctrl+Delete"
            },
            "description": "Clear search results"
        },
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F"
            }
        }
    }
}
